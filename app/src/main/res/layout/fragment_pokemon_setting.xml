<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.battlemanager.presentation.PokemonSettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/pokemon_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:background="@color/grad_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/pokemon_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.pokemonInfo.name}"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/pokemon_img"
            app:layout_constraintStart_toEndOf="@id/pokemon_img"/>
        <TextView
            android:id="@+id/pokemon_type_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@{viewModel.pokemonInfo.type1}"
            app:layout_constraintTop_toBottomOf="@id/pokemon_name_text"
            app:layout_constraintStart_toEndOf="@id/pokemon_img"
            app:layout_constraintBottom_toBottomOf="@id/pokemon_img"/>
        <TextView
            android:id="@+id/pokemon_type_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.pokemonInfo.type2}"
            app:layout_constraintTop_toTopOf="@id/pokemon_type_1_text"
            app:layout_constraintStart_toEndOf="@id/pokemon_type_1_text"/>
        <ImageView
            android:id="@+id/pokemon_selection_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/grad_8"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:onClick="@{()->viewModel.onSelectPokemon()}"
            app:layout_constraintTop_toTopOf="@id/pokemon_img"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지닌물건"
            android:textSize="16sp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="@id/item_selection_img"
            app:layout_constraintBottom_toBottomOf="@id/item_selection_img"
            app:layout_constraintEnd_toStartOf="@id/selected_item_text" />
        <TextView
            android:id="@+id/selected_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음"
            android:textSize="16sp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="@id/item_selection_img"
            app:layout_constraintBottom_toBottomOf="@id/item_selection_img"
            app:layout_constraintEnd_toStartOf="@id/item_selection_img"/>
        <ImageView
            android:id="@+id/item_selection_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/grad_8"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/pokemon_img"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/profile_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grad_8"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/pokemon_img" />
        <TextView
            android:id="@+id/hp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/profile_line"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/hp_text"
            app:layout_constraintStart_toEndOf="@id/hp_text"
            android:layout_marginStart="10dp"
            android:text="@={viewModel.hpText}"
            android:textSize="18sp"/>
        <SeekBar
            android:id="@+id/hp_seekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            style="?android:attr/progressBarStyleHorizontal"
            android:thumb="@drawable/seekbar_thumb"
            android:progressDrawable="@drawable/seekbar_progress"
            android:splitTrack="false"
            android:progress="@={viewModel.hp}"
            app:layout_constraintTop_toBottomOf="@id/hp_text" />
        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/hp_seekBar">
            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨"
                android:textSize="18sp"
                android:layout_gravity="center" />
            <EditText
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:inputType="number"
                android:text="@={viewModel.level}"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="성별"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/horizontal_margin" />
            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/layout_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="특성"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/ability_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상태이상"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/status_abnormality_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/individual_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개체값"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/layout_2"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/individual_value_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.ivH}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.ivA}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.ivB}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.ivC}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.ivD}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.ivS}"/>
        </LinearLayout>
        <TextView
            android:id="@+id/effort_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노력치"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_3"/>
        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/effort_value_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.evH}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.evA}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.evB}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.evC}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.evD}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.evS}"/>
        </LinearLayout>
        <TextView
            android:id="@+id/nature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성격"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/layout_4"
            app:layout_constraintStart_toStartOf="parent"/>
        <Spinner
            android:id="@+id/nature_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/nature_text"
            app:layout_constraintStart_toEndOf="@id/nature_text"/>
        <TextView
            android:id="@+id/rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랭크업"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/nature_spinner"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/rank_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공격"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankA}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방어"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankB}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특공"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankC}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특방"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankD}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스피드"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankS}"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/layout_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명중률"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankAcc}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회피율"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankEva}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="급소율"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.rankCri}"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/layout_6">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술2"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/layout_7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술3"
