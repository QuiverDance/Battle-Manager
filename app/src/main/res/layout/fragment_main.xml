<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.example.battlemanager.presentation.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.MainActivity">

        <ImageView
            android:id="@+id/change_direction_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@color/grad_8"
            app:layout_constraintEnd_toStartOf="@id/undo_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/undo_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:background="@color/grad_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/change_direction_img" />

        <LinearLayout
            android:id="@+id/pokemon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/change_direction_img">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/pokemonInfo_1_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/grad_8"
                    app:layout_constraintEnd_toStartOf="@id/change_pokemon_1_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/change_pokemon_1_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/grad_8"
                    android:onClick="@{()->viewModel.startPokemon1()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pokemonInfo_1_img" />

                <ImageView
                    android:id="@+id/pokemon_1_img"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    app:urlInAssets="@{viewModel.pokemon1.pokemonInfo.imageUrl}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemonInfo_1_img" />

                <TextView
                    android:id="@+id/pokemon_1_type_1_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon1.pokemonInfo.type1}"
                    app:typeBackground="@{viewModel.pokemon1.pokemonInfo.type1}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_1_img"
                    app:layout_constraintStart_toEndOf="@id/pokemon_1_img" />

                <TextView
                    android:id="@+id/pokemon_1_type_2_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon1.pokemonInfo.type2}"
                    app:typeBackground="@{viewModel.pokemon1.pokemonInfo.type2}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_1_type_1_text"
                    app:layout_constraintStart_toEndOf="@id/pokemon_1_type_1_text" />

                <TextView
                    android:id="@+id/pokemon_1_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{viewModel.pokemon1.pokemonInfo.name}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_1_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/pokemonInfo_2_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/grad_8"
                    app:layout_constraintEnd_toStartOf="@id/change_pokemon_2_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/change_pokemon_2_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/grad_8"
                    android:onClick="@{()->viewModel.startPokemon2()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pokemonInfo_2_img" />

                <ImageView
                    android:id="@+id/pokemon_2_img"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    app:urlInAssets="@{viewModel.pokemon2.pokemonInfo.imageUrl}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemonInfo_2_img" />

                <TextView
                    android:id="@+id/pokemon_2_type_1_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon2.pokemonInfo.type1}"
                    app:typeBackground="@{viewModel.pokemon2.pokemonInfo.type1}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_2_img"
                    app:layout_constraintStart_toEndOf="@id/pokemon_2_img" />

                <TextView
                    android:id="@+id/pokemon_2_type_2_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon2.pokemonInfo.type2}"
                    app:typeBackground="@{viewModel.pokemon2.pokemonInfo.type2}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_2_type_1_text"
                    app:layout_constraintStart_toEndOf="@id/pokemon_2_type_1_text" />

                <TextView
                    android:id="@+id/pokemon_2_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{viewModel.pokemon2.pokemonInfo.name}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_2_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokemon_layout"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/grad_8">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공격" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수비" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pokemon_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tabs" />

        <TextView
            android:id="@+id/field_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="10dp"
            android:text="필드 설정"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokemon_viewPager" />

        <ImageView
            android:id="@+id/field_unfold_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:background="@color/grad_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/field_setting_text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/field_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/field_setting_text">

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:onClick="@{()->viewModel.onStartResult()}"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
