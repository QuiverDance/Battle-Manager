                android:layout_height="wrap_content"
                android:text="기술1"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/move_1_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확정 n타"
                android:textSize="16sp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="@id/move_1_text"
                app:layout_constraintStart_toEndOf="@id/move_1_text" />
            <LinearLayout
                android:id="@+id/move_1_min_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/move_1_text"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최소 데미지 : "
                    android:textSize="16sp" />
                <ProgressBar
                    android:id="@+id/move_1_min_hp_progressbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/move_1_max_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
