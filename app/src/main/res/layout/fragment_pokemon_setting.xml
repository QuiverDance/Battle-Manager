<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.battlemanager.presentation.pokemonSetting.PokemonSettingViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <include
                android:id="@+id/header"
                layout="@layout/layout_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:leftMenu='@{"취소"}'
                app:rightMenu1='@{"저장"}'
                app:title='@{"포켓몬 설정"}'
                app:viewModel="@{viewModel}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pokemon_search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rectangle"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header">

                <ImageView
                    android:id="@+id/pokemon_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:urlInAssets="@{viewModel.pokemonInfo.imageUrl}" />

                <TextView
                    android:id="@+id/pokemon_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{viewModel.pokemonInfo.name}"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/pokemon_img"
                    app:layout_constraintTop_toTopOf="@id/pokemon_img" />

                <TextView
                    android:id="@+id/pokemon_type_1_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:text="@{viewModel.pokemonInfo.type1}"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_img"
                    app:layout_constraintStart_toEndOf="@id/pokemon_img"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_name_text"
                    app:typeBackground="@{viewModel.pokemonInfo.type1}" />

                <TextView
                    android:id="@+id/pokemon_type_2_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{viewModel.pokemonInfo.type2}"
                    android:textColor="@color/white"
                    android:visibility='@{viewModel.pokemonInfo.type2.isEmpty() ? View.INVISIBLE : View.VISIBLE}'
                    app:layout_constraintStart_toEndOf="@id/pokemon_type_1_text"
                    app:layout_constraintTop_toTopOf="@id/pokemon_type_1_text"
                    app:typeBackground="@{viewModel.pokemonInfo.type2}" />

                <ImageView
                    android:id="@+id/pokemon_selection_img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:onClick="@{()->viewModel.onSelectPokemon()}"
                    android:src="@drawable/ic_search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pokemon_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/basic_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/background_rectangle"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemon_search_layout">

                <TextView
                    android:id="@+id/hp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:text="HP"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@={viewModel.hpText}"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/hp_text"
                    app:layout_constraintStart_toEndOf="@id/hp_text" />

                <SeekBar
                    android:id="@+id/hp_seekBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:progress="@={viewModel.hp}"
                    android:max="@{viewModel.maxHp}"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar_thumb"
                    app:layout_constraintTop_toBottomOf="@id/hp_text" />

                <TableLayout
                    android:id="@+id/base_info_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toBottomOf="@id/hp_seekBar">

                    <TableRow>

                        <TextView
                            android:id="@+id/level_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="레벨"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxLength="3"
                            android:inputType="number"
                            android:text="@={viewModel.level}" />

                        <TextView
                            android:id="@+id/gender_text"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:text="성별"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/gender_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:entries="@{viewModel.genderList}"
                            selectedValue="@={viewModel.gender}"
                            items="@{viewModel.genderList}"/>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="특성"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/ability_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:entries="@{viewModel.abilityList}"
                            selectedValue="@={viewModel.ability}"
                            items="@{viewModel.abilityList}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="상태이상"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/status_abnormality_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:entries="@{viewModel.statusAbnormalityList}"
                            selectedValue="@={viewModel.statusAbnormality}"
                            items="@{viewModel.statusAbnormalityList}" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/nature_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성격"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/nature_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:textSize="18sp"
                            android:entries="@{viewModel.natureList}"
                            selectedValue="@={viewModel.nature}"
                            items="@{viewModel.natureList}" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:text="지닌물건"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/item_selection_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/item_selection_img" />

                <TextView
                    android:id="@+id/selected_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@{viewModel.itemInfo.name}"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/item_selection_img"
                    app:layout_constraintStart_toEndOf="@id/item_text"
                    app:layout_constraintTop_toTopOf="@id/item_selection_img" />

                <ImageView
                    android:id="@+id/item_selection_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:onClick="@{()->viewModel.onSelectItem()}"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="@id/item_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/base_info_table" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/value_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/background_rectangle"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_layout">

                <TextView
                    android:id="@+id/individual_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:text="개체값"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TableLayout
                    android:id="@+id/ivs_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toBottomOf="@id/individual_value_text">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="HP"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="공격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="방어"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="특수공격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="특수방어"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="스피드"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.ivList[0]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="2"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.ivList[1]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="2"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.ivList[2]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="2"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.ivList[3]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="2"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.ivList[4]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="2"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.ivList[5]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="2"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/effort_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    android:text="노력치"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivs_table" />

                <TableLayout
                    android:id="@+id/evs_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toBottomOf="@id/effort_value_text">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="HP"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="공격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="방어"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="특수공격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="특수방어"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="스피드"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.evList[0]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="3"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.evList[1]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="3"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.evList[2]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="3"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.evList[3]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="3"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.evList[4]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="3"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.evList[5]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="3"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/rank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    android:text="랭크업"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/evs_table" />

                <TableLayout
                    android:id="@+id/rank_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toBottomOf="@id/rank_text">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="공격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="방어"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="특수공격"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="특수방어"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="스피드"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[0]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[1]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[2]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[3]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[4]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="명중률"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="회피율"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="급소율"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[5]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[6]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="@={viewModel.rankList[7]}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLength="1"/>
                    </TableRow>
                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/move_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/background_rectangle"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/value_layout">

                <TextView
                    android:id="@+id/move_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:text="기술"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/layout_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/move_text">

                    <include
                        layout="@layout/layout_move"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onSetMove(0)}"
                        app:move="@{viewModel.moveList.get(0)}" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="30dp" />

                    <include
                        layout="@layout/layout_move"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onSetMove(1)}"
                        app:move="@{viewModel.moveList.get(1)}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/layout_7">

                    <include
                        layout="@layout/layout_move"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onSetMove(2)}"
                        app:move="@{viewModel.moveList.get(2)}" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="30dp" />

                    <include
                        layout="@layout/layout_move"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onSetMove(3)}"
                        app:move="@{viewModel.moveList.get(3)}" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
