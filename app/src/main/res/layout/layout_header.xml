<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.battlemanager.presentation.global.base.BaseViewModel" />
        <variable
            name="title"
            type="String" />
        <variable
            name="rightMenu1"
            type="String" />
        <variable
            name="rightMenu2"
            type="String" />
        <variable
            name="leftMenu"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/left_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{leftMenu}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="@{()->viewModel.onLeftMenu1()}"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toTopOf="@id/title_text"
            app:layout_constraintBottom_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{title}"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/right_menu1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{rightMenu1}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="@{()->viewModel.onRightMenu1()}"
            android:layout_marginEnd="@dimen/horizontal_margin"
            app:layout_constraintTop_toTopOf="@id/title_text"
            app:layout_constraintBottom_toBottomOf="@id/title_text"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/right_menu2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{rightMenu2}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="@{()->viewModel.onRightMenu2()}"
            android:layout_marginEnd="@dimen/horizontal_margin"
            app:layout_constraintTop_toTopOf="@id/title_text"
            app:layout_constraintBottom_toBottomOf="@id/title_text"
            app:layout_constraintEnd_toStartOf="@id/right_menu1_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grad_8"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
