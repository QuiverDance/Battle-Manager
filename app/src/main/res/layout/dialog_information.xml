<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.battlemanager.presentation.dialog.pokemonInfo.InfoViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:nestedScrollingEnabled="true">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            app:urlInAssets="@{viewModel.pokemon.pokemonInfo.imageUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.pokemon.pokemonInfo.name}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/type_1_text"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:text="@{viewModel.pokemon.pokemonInfo.type1}"
            app:typeBackground="@{viewModel.pokemon.pokemonInfo.type1}"
            app:layout_constraintBottom_toBottomOf="@id/name_text"
            app:layout_constraintStart_toEndOf="@id/name_text"/>
        <TextView
            android:id="@+id/type_2_text"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:text="@{viewModel.pokemon.pokemonInfo.type2}"
            app:typeBackground="@{viewModel.pokemon.pokemonInfo.type2}"
            app:layout_constraintBottom_toBottomOf="@id/name_text"
            app:layout_constraintStart_toEndOf="@id/type_1_text"/>
        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grad_8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/name_text"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/baseStat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종족값"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/line_1"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
