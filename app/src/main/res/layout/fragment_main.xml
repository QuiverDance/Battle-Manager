<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.battlemanager.presentation.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.MainActivity"
        android:background="@color/background">
        <include
            android:id="@+id/header"
            layout="@layout/layout_header"
            app:viewModel="@{viewModel}"
            app:title='@{"필드"}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/attack_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공격"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/fire"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/swap_img"
            app:layout_constraintEnd_toStartOf="@id/swap_img"
            app:layout_constraintBottom_toBottomOf="@id/swap_img"/>
        <TextView
            android:id="@+id/defense_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방어"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/water"
            app:layout_constraintStart_toEndOf="@id/swap_img"
            app:layout_constraintTop_toTopOf="@id/swap_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/swap_img"/>
        <ImageView
            android:id="@+id/swap_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_swap_horiz"
            android:onClick="@{()->viewModel.onStartSwap()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <LinearLayout
            android:id="@+id/pokemon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingVertical="8dp"
            android:background="@drawable/background_rectangle"
            app:layout_constraintTop_toBottomOf="@id/swap_img">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선공"
                    android:textSize="18sp"
                    android:textColor="@color/dragon"
                    android:textStyle="bold"
                    android:visibility="@{viewModel.preemptivePokemon == 1 ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintTop_toTopOf="@id/pokemonInfo_1_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pokemonInfo_1_img"
                    app:layout_constraintBottom_toBottomOf="@id/pokemonInfo_1_img"/>
                <ImageView
                    android:id="@+id/pokemonInfo_1_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_info"
                    android:onClick="@{()->viewModel.onShowInfo(1)}"
                    app:layout_constraintEnd_toStartOf="@id/change_pokemon_1_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/change_pokemon_1_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_edit"
                    android:onClick="@{()->viewModel.startPokemon(1)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pokemonInfo_1_img" />

                <ImageView
                    android:id="@+id/pokemon_1_img"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    app:urlInAssets="@{viewModel.pokemon1.pokemonInfo.imageUrl}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemonInfo_1_img" />

                <TextView
                    android:id="@+id/pokemon_1_type_1_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon1.pokemonInfo.type1}"
                    app:typeBackground="@{viewModel.pokemon1.pokemonInfo.type1}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_1_img"
                    app:layout_constraintStart_toEndOf="@id/pokemon_1_img" />

                <TextView
                    android:id="@+id/pokemon_1_type_2_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon1.pokemonInfo.type2}"
                    android:visibility='@{viewModel.pokemon1.pokemonInfo.type2.isEmpty() ? View.INVISIBLE : View.VISIBLE}'
                    app:typeBackground="@{viewModel.pokemon1.pokemonInfo.type2}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_1_type_1_text"
                    app:layout_constraintStart_toEndOf="@id/pokemon_1_type_1_text" />

                <TextView
                    android:id="@+id/pokemon_1_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{viewModel.pokemon1.pokemonInfo.name}"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_1_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선공"
                    android:textSize="18sp"
                    android:textColor="@color/dragon"
                    android:textStyle="bold"
                    android:visibility="@{viewModel.preemptivePokemon == 2 ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintTop_toTopOf="@id/pokemonInfo_2_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pokemonInfo_2_img"
                    app:layout_constraintBottom_toBottomOf="@id/pokemonInfo_2_img"/>
                <ImageView
                    android:id="@+id/pokemonInfo_2_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_info"
                    android:onClick="@{()->viewModel.onShowInfo(2)}"
                    app:layout_constraintEnd_toStartOf="@id/change_pokemon_2_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/change_pokemon_2_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_edit"
                    android:onClick="@{()->viewModel.startPokemon(2)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pokemonInfo_2_img" />

                <ImageView
                    android:id="@+id/pokemon_2_img"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    app:urlInAssets="@{viewModel.pokemon2.pokemonInfo.imageUrl}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemonInfo_2_img" />

                <TextView
                    android:id="@+id/pokemon_2_type_1_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon2.pokemonInfo.type1}"
                    app:typeBackground="@{viewModel.pokemon2.pokemonInfo.type1}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_2_img"
                    app:layout_constraintStart_toEndOf="@id/pokemon_2_img" />

                <TextView
                    android:id="@+id/pokemon_2_type_2_text"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@{viewModel.pokemon2.pokemonInfo.type2}"
                    android:visibility='@{viewModel.pokemon2.pokemonInfo.type2.isEmpty() ? View.INVISIBLE : View.VISIBLE}'
                    app:typeBackground="@{viewModel.pokemon2.pokemonInfo.type2}"
                    app:layout_constraintBottom_toBottomOf="@id/pokemon_2_type_1_text"
                    app:layout_constraintStart_toEndOf="@id/pokemon_2_type_1_text" />

                <TextView
                    android:id="@+id/pokemon_2_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{viewModel.pokemon2.pokemonInfo.name}"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_2_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/field_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="10dp"
            android:text="필드 설정"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokemon_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/field_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="8dp"
            android:background="@drawable/background_rectangle"
            app:layout_constraintTop_toBottomOf="@id/field_setting_text">
            <TextView
                android:id="@+id/weather_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날씨"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/horizontal_margin"/>
            <Spinner
                android:id="@+id/weather_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/weather_text"
                app:layout_constraintStart_toEndOf="@id/weather_text"
                app:layout_constraintBottom_toBottomOf="@id/weather_text"/>
            <TextView
                android:id="@+id/field_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필드"
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/weather_text"
                app:layout_constraintStart_toStartOf="parent"/>
            <Spinner
                android:id="@+id/field_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/field_text"
                app:layout_constraintStart_toEndOf="@id/field_text"
                app:layout_constraintBottom_toBottomOf="@id/field_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결과 확인"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:onClick="@{()->viewModel.onStartResult()}"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
