<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/hp_progressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/hp_progressBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="성별"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개체값"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/grad_8"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layout_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성격"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/grad_8"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노력치"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/grad_8"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layout_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="랭크업"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/grad_8"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:inputType="number"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layout_3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="특성"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/ability_spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상태이상"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/grad_8"/>
            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layout_4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술2"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layout_5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술3"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="기술4"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
